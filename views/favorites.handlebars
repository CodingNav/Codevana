<div class="container-fluid">

  <!-- Youtube -->
  <h2>Youtube</h2>
  <div class="row">
    {{#each videos as |video|}}
    <div class="col-lg-2">
      <a href="{{video.url}}" target="_blank">
        <div class="card w-100 h-100">
          <img class="card-img-top" src="{{video.image}}" alt="Card image cap" />
          <div class="card-body">
            <p class="card-text">{{video.title}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-center">{{video.channel}}</li>
          </ul>
          <div class="card-footer">
            <div class="card-text text-center">
              <i class="fas fa-star" data-favid="{{video.id}}" data-source="youtube" data-url="https://www.youtube.com/watch?v={{video.url}}" data-image="{{video.image}}" data-title="{{video.title}}" data-channel="{{video.channel}}"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>

  <!-- Stack Overflow -->
  <h2>Stack Overflow</h2>
  <div class="row">
    {{#each stackPosts as |post|}}
    <div class="col-lg-2">
      <a href="{{post.url}}" target="_blank">
        <div class="card w-100 h-100">
          <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-center">Likes: {{post.likes}}</li>
          </ul>
          <div class="card-footer">
            <div class="card-text text-center">
              <i class="fas fa-star" data-favid="{{post.id}}" data-source="stackoverflow" data-url="{{post.url}}" data-title="{{post.title}}" data-likes="{{post.likes}}"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>

  <!-- Reddit -->
  <h2>Reddit</h2>
  <div class="row">
    {{#each redditPosts as |post|}}
    <div class="col-lg-2">
      <a href="{{post.url}}" target="_blank">
        <div class="card w-100 h-100">
          <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-center">Likes: {{post.likes}}</li>
          </ul>
          <div class="card-footer">
            <div class="card-text text-center">
              <i class="fas fa-star" data-favid="{{post.id}}" data-source="reddit" data-url="{{post.url}}" data-title="{{post.title}}" data-likes="{{post.likes}}"></i>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>